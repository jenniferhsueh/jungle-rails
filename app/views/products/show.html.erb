<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd>$<%= @product.price %></dd>
          <br>
          <br>
  
          <% if current_user %>
          <div class="row">
            <div class="col-sm-6 col-sm-offset-1">
              <%= form_for [@product, @new_review] do |f| %>
                <div class="form-group">
                <b>Add a Review</b>
                  <%= f.text_area :description, class: 'form-control' %>
                </div>

                <div class="form-group">
                  <%= f.label :rating %>
                  <%= f.select :rating, [['⭐','1'],['⭐⭐','2'],['⭐⭐⭐','3'],['⭐⭐⭐⭐','4'],['⭐⭐⭐⭐⭐','5']]%>
                </div>
                <%= f.submit 'Add Review', class: 'btn btn-primary' %>
              <% end %>
            </div>
          </div>
          <% end %>

          <br>
          <br>
          <dt>Reviews</dt>
          <dd>
            <% @product.reviews.each do |review| %>
              Name: <%= User.find_by(id: review.user_id).first_name %> <%= User.find_by(id: review.user_id).last_name %>
              <br>
              User: <%= review_user_first_name(review.user_id)%> <%= review_user_last_name(review.user_id)%>
              <br>
              Review: <%= review.description %> 
              <br>
              Rating: <%= review.rating %>/5
              <br>
              <br>
            <% end %>
          </dd>
        </dl>
      </div>
    </div>

  </article>

</section>
